<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    tools:context=".ProfileActivity">

    <!-- Ui Frame -->
    <LinearLayout
        android:id="@+id/ProfileFrame"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="4dp"
        android:paddingVertical="22dp"
        android:gravity="top|center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <!-- EU Inner Frame -->
        <LinearLayout
            android:id="@+id/ProfileInnerFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp">

            <!-- Logo Container -->
            <LinearLayout
                android:id="@+id/LogoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="4dp"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/ProfileLogo"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/blackshoreslogo"
                    android:contentDescription="@string/logo_desc" />
            </LinearLayout>

            <!-- Details Container -->
            <LinearLayout
                android:id="@+id/DetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="top|center_horizontal"
                android:paddingHorizontal="9dp"
                android:paddingVertical="9dp"
                android:layout_marginTop="9dp">

                <TextView
                    android:id="@+id/User_FullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_placeholder_name"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:lineHeight="26sp"
                    android:fontFamily="@font/inter_medium"
                    android:letterSpacing="0"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/User_Handle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_placeholder_handle"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp"
                    android:lineHeight="26sp"
                    android:fontFamily="@font/inter_medium"
                    android:letterSpacing="0"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/User_Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_placeholder_number"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp"
                    android:lineHeight="26sp"
                    android:fontFamily="@font/inter"
                    android:letterSpacing="0"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/User_Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_placeholder_email"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp"
                    android:lineHeight="26sp"
                    android:fontFamily="@font/inter"
                    android:letterSpacing="0"
                    android:includeFontPadding="false" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Logout Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Logout_Btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/general_button"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="0"
        android:lineHeight="22sp"
        android:padding="0dp"
        android:stateListAnimator="@null"
        android:text="@string/profile_logout_btn"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
