<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/smallcard_bg"
    android:padding="11dp"
    android:layout_marginTop="25dp">

    <!-- Label -->
    <TextView
        android:id="@+id/entry_label_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tr_Placeholder_SentLabel"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:lineHeight="19dp"
        android:textColor="#CCCCCC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Entity -->
    <TextView
        android:id="@+id/entry_entity_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tr_Placeholder_Entity"
        android:fontFamily="@font/inter_medium"
        android:textSize="15sp"
        android:lineHeight="19dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entry_label_sent"/>

    <!-- Time -->
    <TextView
        android:id="@+id/entry_time_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tr_Placeholder_Time"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:lineHeight="19dp"
        android:textColor="#4C4C4C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Currency -->
    <TextView
        android:id="@+id/entry_currency_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Currency"
        android:fontFamily="@font/inter_medium"
        android:textSize="15sp"
        android:lineHeight="19dp"
        android:textColor="#C62828"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@id/entry_amount_sent"
        app:layout_constraintTop_toBottomOf="@id/entry_time_sent"/>

    <!-- Amount -->
    <TextView
        android:id="@+id/entry_amount_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tr_Placeholder_Amount"
        android:fontFamily="@font/inter_medium"
        android:textSize="15sp"
        android:lineHeight="19dp"
        android:textColor="#C62828"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entry_time_sent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
