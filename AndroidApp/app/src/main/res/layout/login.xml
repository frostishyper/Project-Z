<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    tools:context=".LoginActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:src="@drawable/blackshoreslogo"
        android:contentDescription="@string/logo_desc"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="77dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Page Header -->
    <TextView
        android:id="@+id/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/sign_in"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <!-- UI Frame -->
    <LinearLayout
        android:id="@+id/FormContainer"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:gravity="center_vertical|start"
        app:layout_constraintTop_toBottomOf="@id/signInText"
        android:layout_marginTop="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <!-- Number Input Frame -->
        <LinearLayout
            android:id="@+id/NumberInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center_vertical|start">

            <!-- Label -->
            <TextView
                android:id="@+id/AccountNumberLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_number_label"
                android:textColor="#D1D5DB"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical|start"
                android:letterSpacing="0"
                android:includeFontPadding="false" />

            <!-- Input -->
            <EditText
                android:id="@+id/LoginNumberInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_bg"
                android:hint="@string/account_number_hint"
                android:fontFamily="@font/inter"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:textSize="15sp"
                android:gravity="center_vertical|start"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="text"
                android:includeFontPadding="false" />
        </LinearLayout>

        <!-- Pin Input Frame -->
        <LinearLayout
            android:id="@+id/PinInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="17dp"
            android:padding="0dp"
            android:gravity="center_vertical|start">

            <!-- Label -->
            <TextView
                android:id="@+id/PinLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_pin_label"
                android:textColor="#D1D5DB"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical|start"
                android:letterSpacing="0"
                android:includeFontPadding="false" />

            <!-- Pin Container  -->
            <FrameLayout
                android:id="@+id/LoginPinFrame"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_bg">

                <!-- Pin Input -->
                <EditText
                    android:id="@+id/LoginPinInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/pin_hint"
                    android:fontFamily="@font/inter"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:textSize="15sp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp"
                    android:inputType="numberPassword"
                    android:includeFontPadding="false" />

                <!-- Toggle Icon -->
                <ImageView
                    android:id="@+id/TogglePinVisibility"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/eye_closed"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/toggle_visibility_desc" />
            </FrameLayout>

        </LinearLayout>

        <!-- Login Options Frame -->
        <LinearLayout
            android:id="@+id/LoginOptionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:layout_marginTop="37dp">

            <LinearLayout
                android:id="@+id/ForgotContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end">

                <TextView
                    android:id="@+id/ForgotLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_pin"
                    android:textColor="#D1D5DB"
                    android:textSize="15sp"
                    android:fontFamily="@font/inter"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical|end" />
            </LinearLayout>
        </LinearLayout>
        
        <!-- Login Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/LoginButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/general_button"
            android:text="@string/login"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:lineHeight="22sp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:letterSpacing="0"
            android:includeFontPadding="false"
            android:stateListAnimator="@null"
            android:padding="0dp" />

        <!-- Divider Frame -->
        <LinearLayout
            android:id="@+id/DividerContainer"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp">

            <!-- Left Line -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#333333" />

            <!-- Divider Text -->
            <TextView
                android:id="@+id/DividerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="11dp"
                android:text="@string/or_text"
                android:textColor="#D1D5DB"
                android:textSize="13sp"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:includeFontPadding="false"
                android:letterSpacing="0" />
            
            <!-- Right Line -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#333333" />
        </LinearLayout>

        <!-- Register Frame -->
        <LinearLayout
            android:id="@+id/RegisterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingHorizontal="7dp"
            android:paddingVertical="7dp">

            
            <TextView
                android:id="@+id/NoAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_account"
                android:textColor="#9CA3AF"
                android:textSize="14sp"
                android:fontFamily="@font/inter"
                android:letterSpacing="0"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:layout_marginEnd="13dp" />

            <TextView
                android:id="@+id/RegisterNowText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_now"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/inter"
                android:letterSpacing="0"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
