<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    tools:context=".">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:src="@drawable/blackshoreslogo"
        android:contentDescription="@string/logo_desc"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="77dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Page Header -->
    <TextView
        android:id="@+id/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/register"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <!-- UI Frame -->
    <LinearLayout
        android:id="@+id/FormContainer"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:gravity="center_vertical|start"
        app:layout_constraintTop_toBottomOf="@id/signInText"
        android:layout_marginTop="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <!-- Number Input Frame -->
        <LinearLayout
            android:id="@+id/NumberInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center_vertical|start">

            <!-- Label -->
            <TextView
                android:id="@+id/AccountNumberLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_number"
                android:textColor="#D1D5DB"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical|start"
                android:letterSpacing="0"
                android:includeFontPadding="false" />

            <!-- Input -->
            <EditText
                android:id="@+id/RegisterNumber"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_bg"
                android:fontFamily="@font/inter"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:textSize="15sp"
                android:gravity="center_vertical|start"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="text"
                android:includeFontPadding="false" />
        </LinearLayout>

        <!-- Email Frame -->
        <LinearLayout
            android:id="@+id/EmailInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="17dp"
            android:padding="0dp"
            android:gravity="center_vertical|start">

            <!-- Label -->
            <TextView
                android:id="@+id/AccountEmailLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_email"
                android:textColor="#D1D5DB"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical|start"
                android:letterSpacing="0"
                android:includeFontPadding="false" />

            <!-- Input -->
            <EditText
                android:id="@+id/RegisterEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_bg"
                android:fontFamily="@font/inter"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:textSize="15sp"
                android:gravity="center_vertical|start"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="text"
                android:includeFontPadding="false" />
        </LinearLayout>

        <!-- Firstname Frame -->
        <LinearLayout
            android:id="@+id/FirstnameInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="17dp"
            android:padding="0dp"
            android:gravity="center_vertical|start">

            <!-- Label -->
            <TextView
                android:id="@+id/AccountFirstnameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_firstname"
                android:textColor="#D1D5DB"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical|start"
                android:letterSpacing="0"
                android:includeFontPadding="false" />

            <!-- Input -->
            <EditText
                android:id="@+id/RegisterFirstname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_bg"
                android:fontFamily="@font/inter"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:textSize="15sp"
                android:gravity="center_vertical|start"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="text"
                android:includeFontPadding="false" />
        </LinearLayout>

        <!-- Lastname Frame -->
        <LinearLayout
            android:id="@+id/LastnameInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="17dp"
            android:padding="0dp"
            android:gravity="center_vertical|start">

            <!-- Label -->
            <TextView
                android:id="@+id/AccountLastnameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_lastname"
                android:textColor="#D1D5DB"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical|start"
                android:letterSpacing="0"
                android:includeFontPadding="false" />

            <!-- Input -->
            <EditText
                android:id="@+id/RegisterLastname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_bg"
                android:fontFamily="@font/inter"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:textSize="15sp"
                android:gravity="center_vertical|start"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="text"
                android:includeFontPadding="false" />
        </LinearLayout>

        <!-- Proceed Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ProceedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/general_button"
            android:text="@string/register_proceed"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:lineHeight="22sp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:letterSpacing="0"
            android:includeFontPadding="false"
            android:stateListAnimator="@null"
            android:padding="0dp" />

        <!-- Login Frame -->
        <LinearLayout
            android:id="@+id/SignInContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingHorizontal="7dp"
            android:paddingVertical="7dp">

            
            <TextView
                android:id="@+id/HaveAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_account"
                android:textColor="#9CA3AF"
                android:textSize="14sp"
                android:fontFamily="@font/inter"
                android:letterSpacing="0"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:layout_marginEnd="13dp" />

            <TextView
                android:id="@+id/SignInNowText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/inter"
                android:letterSpacing="0"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>