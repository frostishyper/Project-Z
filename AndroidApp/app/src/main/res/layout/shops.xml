<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_shops"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="37dp"
    tools:context=".ShopsActivity">

    <!-- Row: Back button only -->
    <LinearLayout
        android:id="@+id/layout_back_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:contentDescription="@string/desc_back_button"
            android:src="@drawable/back_button"
            app:tint="#CCCCCC" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Page Title -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/shops_title"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Page Sub header -->
    <TextView
        android:id="@+id/text_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/shops_subheader"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="start" />

    <!-- Partners List -->
    <LinearLayout
        android:id="@+id/layout_partners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/partners_container_bg"
        android:padding="5dp">

        <!-- Steam -->
        <LinearLayout
            android:id="@+id/item_partner_steam"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image_SteamLogo"
                android:layout_width="70dp"
                android:layout_height="51dp"
                android:layout_marginEnd="8dp"
                android:padding="5dp"
                android:src="@drawable/store_steam" />

            <TextView
                android:id="@+id/text_steam_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:text="@string/shops_steam"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/image_steam_arrow"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:contentDescription="@string/desc_arrow"
                android:padding="5dp"
                android:src="@drawable/chevron_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="#333333" />

        <!-- Wuthering Waves -->
        <LinearLayout
            android:id="@+id/item_partner_wuwa"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image_wuwa_logo"
                android:layout_width="70dp"
                android:layout_height="51dp"
                android:layout_marginEnd="8dp"
                android:padding="5dp"
                android:src="@drawable/store_wuwa" />

            <TextView
                android:id="@+id/text_wuwa_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:text="@string/shops_wuwa"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/image_wuwa_arrow"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:contentDescription="@string/desc_arrow"
                android:padding="5dp"
                android:src="@drawable/chevron_right" />
        </LinearLayout>

    </LinearLayout>

    <!-- Logo -->
    <ImageView
        android:id="@+id/image_blackshores_logo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/desc_logo_blackshores"
        android:padding="5dp"
        android:src="@drawable/blackshoreslogo" />

</LinearLayout>