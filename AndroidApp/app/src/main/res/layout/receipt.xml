<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    tools:context=".ReceiptActivity">

    <!-- Ui Frame -->
    <LinearLayout
        android:id="@+id/ProfileFrame"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="4dp"
        android:paddingVertical="22dp"
        android:gravity="top|center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <!-- Back Button Container -->
        <LinearLayout
            android:id="@+id/BackBtnContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/BackBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ico_back"
                android:contentDescription="@string/back_button_desc" />
        </LinearLayout>

        <!-- Receipt Inner Frame -->
        <LinearLayout
            android:id="@+id/ReceiptInnerFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp">

            <!-- Page Title -->
            <TextView
                android:id="@+id/receipt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="@string/receipt_sentlabel"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Main Details -->
            <LinearLayout
                android:id="@+id/receipt_main_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/smallcard_bg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- ($) -->
                    <TextView
                        android:id="@+id/receipt_currency_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:letterSpacing="0"
                        android:text="@string/receipt_currency"
                        android:textColor="#C62828"
                        android:textSize="32sp"
                        android:lineHeight="25sp" />

                    <!-- (1000.00) -->
                    <TextView
                        android:id="@+id/receipt_amount_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/inter_medium"
                        android:letterSpacing="0"
                        android:text="1000.00"
                        android:textColor="#C62828"
                        android:textSize="32sp"
                        android:lineHeight="25sp" />

                </LinearLayout>

                <!-- (The date & time) -->
                <TextView
                    android:id="@+id/receipt_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:letterSpacing="0"
                    android:text="@string/receipt_placeholder_datetime"
                    android:textColor="#CCCCCC"
                    android:textSize="16sp"
                    android:lineHeight="25sp" />

                <!-- line -->
                <View
                    android:id="@+id/receipt_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"
                    android:background="#FFFFFF" />

                <!-- Disclaimer -->
                <TextView
                    android:id="@+id/receipt_disclaimer_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/inter_medium"
                    android:letterSpacing="0"
                    android:text="@string/receipt_disclaimer"
                    android:textColor="#4C4C4C"
                    android:textSize="12sp"
                    android:lineHeight="25sp" />
            </LinearLayout>

            <!-- Note Container -->
            <LinearLayout
                android:id="@+id/receipt_note_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/smallcard_bg">

                <!-- "Note" Label -->
                <TextView
                    android:id="@+id/receipt_notelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:letterSpacing="0"
                    android:text="@string/receipt_notelabel"
                    android:textColor="#CCCCCC"
                    android:textSize="16sp"
                    android:lineHeight="25sp" />

                <!-- line -->
                <View
                    android:id="@+id/receipt_notedivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF" />

                <!-- Note Contents -->
                <TextView
                    android:id="@+id/receipt_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_medium"
                    android:letterSpacing="0"
                    android:text="@string/receipt_placeholder_Note"
                    android:textColor="#CCCCCC"
                    android:textSize="16sp"
                    android:lineHeight="25sp" />
            </LinearLayout>

            <!-- Other Details Container -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/receipt_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/smallcard_bg">

                <!-- Row 1: Account -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Label: "Account :" -->
                    <TextView
                        android:id="@+id/receipt_account_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/receipt_Accountlabel"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Account value -->
                    <TextView
                        android:id="@+id/receipt_account_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/receipt_placeholder_account"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Row 2: Fee -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <!-- Label: "Fee :" -->
                    <TextView
                        android:id="@+id/receipt_fee_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/receipt_feelabel"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Fee value -->
                    <TextView
                        android:id="@+id/receipt_fee_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/receipt_placeholder_fee"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Row 3: Reference ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <!-- Label: "Reference ID :" -->
                    <TextView
                        android:id="@+id/receipt_reference_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/receipt_referencelabel"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Reference Value -->
                    <TextView
                        android:id="@+id/receipt_reference_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/receipt_placeholder_reference"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Logo-->
            <ImageView
                android:id="@+id/image_blackshores_logo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:contentDescription="@string/desc_logo_blackshores"
                android:padding="5dp"
                android:src="@drawable/blackshoreslogo" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
